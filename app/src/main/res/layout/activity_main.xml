<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/YP_Blue"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="@string/app_name"
            android:textColor="@color/YP_White"
            android:textSize="@dimen/main_font"
            tools:ignore="RtlHardcoded" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="@string/search_small"
            android:visibility="invisible" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_search"
        style="@style/MainActivityButton"
        android:text="@string/search_small"
        app:icon="@drawable/lens" />

    <Button
        android:id="@+id/btn_media"
        style="@style/MainActivityButton"
        android:text="@string/media"
        app:icon="@drawable/media" />

    <Button
        android:id="@+id/btn_settings"
        style="@style/MainActivityButton"
        android:text="@string/settings"
        app:icon="@drawable/sets" />
</LinearLayout>

