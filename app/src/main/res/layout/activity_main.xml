<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/YP_Blue"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="@string/app_name"
            android:textColor="@color/YP_White"
            android:textSize="@dimen/main_font"
            tools:ignore="RtlHardcoded">

        </TextView>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </Space>

        <Button
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="@string/search_small"
            android:visibility="invisible">

        </Button>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_padding_main"
        android:layout_marginTop="@dimen/margin_padding_main"
        android:layout_marginRight="@dimen/margin_padding_main"
        android:layout_weight="1"
        android:backgroundTint="@color/YP_White"
        android:padding="@dimen/margin_padding_main"
        android:text="@string/search_small"
        android:textAllCaps="false"
        android:textColor="@color/YP_Black"
        android:textSize="@dimen/main_font"
        app:cornerRadius="@dimen/button_corner_radius"
        app:icon="@drawable/lens"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding_btn"
        app:iconSize="@dimen/icon_size_btn"
        app:iconTint="@color/YP_Black">

    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_padding_main"
        android:layout_marginTop="@dimen/margin_padding_main"
        android:layout_marginRight="@dimen/margin_padding_main"
        android:layout_weight="1"
        android:backgroundTint="@color/YP_White"
        android:padding="@dimen/margin_padding_main"
        android:text="@string/media"
        android:textAllCaps="false"
        android:textColor="@color/YP_Black"
        android:textSize="@dimen/main_font"
        app:cornerRadius="@dimen/button_corner_radius"
        app:icon="@drawable/media"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding_btn"
        app:iconTint="@color/YP_Black">

    </Button>

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_padding_main"
        android:layout_marginTop="@dimen/margin_padding_main"
        android:layout_marginRight="@dimen/margin_padding_main"
        android:layout_weight="1"
        android:backgroundTint="@color/YP_White"
        android:padding="@dimen/margin_padding_main"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/YP_Black"
        android:textSize="@dimen/main_font"
        app:cornerRadius="@dimen/button_corner_radius"
        app:icon="@drawable/sets"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding_btn"
        app:iconSize="@dimen/icon_size_btn"
        app:iconTint="@color/YP_Black">

    </Button>
</LinearLayout>

