<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityButton" parent="Theme.PlaylistMaker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_main</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_main</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_main</item>
        <item name="android:textSize">@dimen/main_font</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/search_small</item>
        <item name="android:padding">@dimen/margin_padding_main</item>
        <item name="android:backgroundTint">@color/YP_White</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="iconSize">@dimen/icon_size_btn</item>
        <item name="iconPadding">@dimen/icon_padding_btn</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="settingsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/font_size_settings</item>
    </style>

    <style name="secondaryActivityHeaderTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/main_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="backButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/YP_White</item>
        <item name="android:text">back</item>
        <item name="icon">@drawable/arrow_back</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="android:outlineSpotShadowColor">@color/YP_White</item>
    </style>

    <style name="hidden_search_button">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:text">@string/search_small</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="icon_settings">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="empty_space_horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="setting_menu_row_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_main</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_main</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_main</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_main</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>