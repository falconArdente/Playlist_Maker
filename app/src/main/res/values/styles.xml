<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityButton" parent="Theme.PlaylistMaker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_main</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_main</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_main</item>
        <item name="android:textSize">@dimen/main_font</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/search_small</item>
        <item name="android:padding">@dimen/margin_padding_main</item>
        <item name="android:backgroundTint">@color/YP_White</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="iconSize">@dimen/icon_size_btn</item>
        <item name="iconPadding">@dimen/icon_padding_btn</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="settingsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/font_size_settings</item>
    </style>
    <style name="secondaryActivityHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/main_font</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="backButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/YP_White</item>
        <item name="android:text">back</item>
        <item name="icon">@drawable/arrow_back</item>
        <item name="iconTint">@color/YP_Black</item>
    </style>
</resources>