<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_main</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_main</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_main</item>
        <item name="android:textSize">@dimen/main_font</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/search_small</item>
        <item name="android:padding">@dimen/margin_padding_main</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="iconSize">@dimen/icon_size_btn</item>
        <item name="iconPadding">@dimen/icon_padding_btn</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:fontFamily">"@font/ys_display_medium"</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="settingsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_row_height</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/font_size_settings</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_padding_main</item>
        <item name="android:fontFamily">"@font/ys_display_regular"</item>
    </style>

    <style name="secondaryActivityHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/search_padding</item>
        <item name="titleTextAppearance">@style/HeaderTextStyle</item>
        <item name="titleMarginStart">@dimen/clear_button_horizontal_margin</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/header_font_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="player_artist_name_text_style">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/artist_name_text_size_for_player</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="player_duration_text_style">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/duration_text_size_for_player</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="player_table_titles_text_style">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/player_rows_title_text_size</item>
        <item name="android:layout_height">@dimen/player_rows_height</item>
        <item name="android:textColor">@color/YP_Text_Gray</item>
        <item name="android:gravity">start|center</item>
        <item name="android:paddingHorizontal">@dimen/player_rows_padding</item>
    </style>

    <style name="player_table_values_text_style">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/player_rows_title_text_size</item>
        <item name="android:layout_height">@dimen/player_rows_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:gravity">end|center</item>
        <item name="android:paddingHorizontal">@dimen/player_rows_padding</item>
        <item name="layout_constraintHorizontal_bias">1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="hidden_search_button">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">@dimen/small_padding_for_header</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:text">@string/search_small</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="icon_settings">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="tint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="search_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">"#00000000"</item>
        <item name="android:focusedByDefault">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/search_small</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSize">@dimen/searchbox_text_size</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textColorHint">?attr/colorOnSecondaryContainer</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:drawablePadding">@dimen/icon_padding_btn</item>
        <item name="android:drawableTint">?attr/colorOnSecondaryContainer</item>
        <item name="android:layout_marginEnd">@dimen/search_bar_margin_right</item>
        <item name="android:paddingStart">@dimen/additional_padding</item>
    </style>

    <style name="track_row_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/track_row_track_artist_name_height</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/track_row_text_size_small</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="drawableTint">?attr/colorSecondaryVariant</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="playlist_row_text" parent="track_row_text">
        <item name="android:layout_height">@dimen/playlist_row_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/playlist_row_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="drawableTint">?attr/colorSecondaryVariant</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="track_row_image">
        <item name="android:layout_width">@dimen/track_row_image_size</item>
        <item name="android:layout_height">@dimen/track_row_image_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/track_row_start_margin</item>
        <item name="android:layout_marginVertical">@dimen/track_row_vertical_padding</item>
        <item name="android:src">@drawable/placeholder_search_bar</item>
    </style>

    <style name="TabText" parent="Widget.AppCompat.ActionBar.TabText">
        <item name="tabTextColor">@color/YP_Black</item>
        <item name="tabSelectedTextColor">@color/YP_Black</item>
        <item name="tabIndicatorColor">@color/YP_Black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="fragment_common_style" parent="Base.Theme.PlaylistMaker">
        <item name="android:background">?attr/colorSecondary</item>
    </style>

    <style name="bottom_nav_view_style" parent="fragment_common_style">
        <item name="itemTextAppearanceInactive">@style/bottom_nav_view_text_appearance</item>
        <item name="itemTextAppearanceActive">@style/bottom_nav_view_text_appearance</item>
        <item name="itemIconSize">@dimen/bottom_navigation_bar_icon_size</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="itemPaddingBottom">@dimen/bottom_navigation_bar_item_padding</item>
        <item name="itemPaddingTop">@dimen/bottom_navigation_bar_item_padding</item>
        <item name="itemTextColor">@drawable/bottom_navigation_view_color_selector</item>
        <item name="itemIconTint">@drawable/bottom_navigation_view_color_selector</item>
        <item name="itemActiveIndicatorStyle">@style/transparent_indicator</item>
    </style>

    <style name="transparent_indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/transparent</item>
    </style>

    <style name="bottom_nav_view_text_appearance">
        <item name="android:textSize">@dimen/bottom_navigation_bar_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="create_playlist_field">
        <item name="android:textSize">@dimen/create_playlist_field_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/create_playlist_title_field_top_margin</item>
        <item name="textFillColor">?attr/colorOnSecondary</item>
        <item name="android:background">@drawable/create_playlist_field_init_background</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="android:focusedByDefault">false</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:importantForAutofill">no</item>
e    </style>

    <style name="create_playlist_up_string">
        <item name="android:textSize">@dimen/create_playlist_field_up_string_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginStart">
            @dimen/create_playlist_field_up_string_margin_start
        </item>
        <item name="android:paddingHorizontal">
            @dimen/create_playlist_field_up_string_padding_horizontal
        </item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:textColor">@color/YP_Blue</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="create_playlist_create_button">
        <item name="android:textSize">@dimen/create_playlist_field_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/YP_White</item>
        <item name="android:background">@drawable/create_playlist_create_button_background</item>
    </style>
</resources>